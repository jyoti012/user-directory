<h2><%= t 'login.title' %></h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.label :email, (t 'login.email')  %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %><br />
  </div>

  <div class="field">
    <%= f.label :password, (t 'login.password') %><br />
    <%= f.password_field :password, autocomplete: "current-password" %><br />
  </div>

  <div class="actions">
    <%= f.submit (t 'login.submit') %>
  </div>
<% end %>

